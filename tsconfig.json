{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"outDir": "build",
		"noEmitOnError": true,
		"noImplicitAny": true,
		"typeRoots": [
			"../node_modules/@types"
		],
		"types": [
			"node"
		]
	},
	"include": [
		"server/**/*.ts",
		"server/*.ts"
	],
	"exclude": [
		"node_modules"
	],
	"compileOnSave": true,
	"buildOnSalve": true
}